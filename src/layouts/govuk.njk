{% extends "govuk_template_jinja/views/layouts/govuk_template.html" %}
{% from "@govuk-frontend/phase-banner/macro.njk" import govukPhaseBanner %}

{% set homepage_url = '/' %}

{% block page_title %}PaaS Administration{% endblock %}

{% block head %}
  <link href="./govuk.screen.scss" media="screen" rel="stylesheet" type="text/css" />
  <link href="./govuk.print.scss" media="print" rel="stylesheet" type="text/css" />
{% endblock %}

{% block inside_header %}
  <div class="header-title">
    Platform as a Service
  </div>
  <div class="navigation">
    <ul>
      <li><a href="{{ linkTo('admin.organizations') }}">My Organisations</a></li>
      <li><a href="https://docs.cloud.service.gov.uk/">Documentation</a></li>
      <li><a href="mailto:gov-uk-paas-support@digital.cabinet-office.gov.uk">Support</a></li>
      <li><a href="/auth/logout">Sign out</a></li>
    <ul>
  </div>
{% endblock %}

{% block cookie_message %}
  <p>GOV.UK uses cookies to make the site simpler. <a href="#">Find out more about cookies</a></p>
{% endblock %}

{% block footer_support_links %}
  <nav class="footer-nav">
    <ul>
      <li>Built by the <a href="https://www.gov.uk/government/organisations/government-digital-service">Government Digital Service</a></li>
      <li><a href="#">Cookies</a></li>
    </ul>
  </nav>
{% endblock %}

{% block content %}
  <div class="govuk-o-width-container">
    {{ govukPhaseBanner({
      tag: {
        text: 'alpha'
      },
      html: 'This is a new service â€“ your <a class="govuk-link" href="mailto:gov-uk-paas-support@digital.cabinet-office.gov.uk">feedback</a> will help us to improve it.'
    }) }}

    <main class="govuk-o-main-wrapper {% if organization %} with-subnav {% endif %} {% block main_classes %}{% endblock %}">
      {% if organization %}
        {% include "../organizations/subnav/element.njk" %}
      {% endif %}

      {% block main %}
        No content rendered to 'main' block
      {% endblock %}
    </main>
  </div>
{% endblock %}

{% block body_end %}

{% endblock %}
